{% extends 'base.html.twig' %}
{% block title %}Mot de passe oublié - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
<h1>Mot de passe oublié</h1>
    {{ form_start (form, {
            'attr': {'novalidate': 'novalidate'}
        }) }}
        {{ form_row (form.email) }}
        <button type="submit" class="btn btn-primary">Confirmer</button>
    {{ form_end (form) }}
</div>
{% endblock %}