{% extends 'base.html.twig' %}
{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">    
    <div class="d-flex justify-content-center text-center">
        <div class="col-sm-4"> 
            <h1 class="mt-3">Connexion</h1>   
            {% if error %}
                <div class="text-danger"><span class="badge badge-danger">Error</span>Le mot de passe ou le nom d'utilisateur est invalide</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <div class="form-group"> 
                    <input class="form-control" type="text" placeholder="Adresse mail" name="_username" value="{{ lastUsername }}">
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="password" placeholder="Mot de passe" name="_password">
                </div> 


                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button type="submit" class="btn btn-success col-12 m-0">Connexion</button>
                
            </form>
        </div>    
    </div>

</div>

{% endblock %}