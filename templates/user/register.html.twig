{% extends 'base.html.twig' %}
{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block body %}

<div class="d-flex justify-content-center">
    <div class="col-sm-6"> 
        <h1 class="mt-3">Inscription</h1>

        <div class="modal-content">
            <!--Modal cascading tabs-->
            <div class="modal-c-tabs">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs md-tabs tabs-2" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('login')}}" role="tab">
                            <i class="fa fa-user mr-1"></i> Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active"  href="{{path('register')}}" >
                            <i class="fa fa-user-plus mr-1"></i> Inscription
                        </a>
                    </li>
                </ul>

                <!-- Tab panels -->
                <div class="tab-content">
                    <div class="tab-pane fade in show active" role="tabpanel">
                    <!--Body-->
                        <div class="modal-body mb-1">
                            <form action="{{ path('register') }}" method="post"> 
                                {{ form_start (form, {
                                    'attr': {'novalidate': 'novalidate'}
                                }) }}
                                
                                <div class="md-form form-sm mb-4">
                                    <i class="fas fa-user prefix"></i>
                                    {{ form_widget (form.username, {
                                        'attr': {'class': 'form-control',
                                        'placeholder': 'Nom d\'utilisateur'}
                                    }) }}
                                    <small id="user_username_help" class="form-text text-muted">Votre nom d'utilisateur doit faire au minimum 3 caratères.</small>  
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <i class="fa fa-envelope prefix"></i>
                                    {{ form_widget (form.email, {
                                        'attr': {'class': 'form-control',
                                        'placeholder': 'Email'}
                                    }) }}
                                </div>
                                <div class="md-form form-sm mb-4">
                                    <i class="fa fa-lock prefix"></i>
                                    {{ form_widget (form.plainPassword, {
                                        'attr': {'class': 'form-control',
                                        'placeholder': 'Mot de passe'}
                                    }) }}
                                    <small id="user_plainPassword_help" class="form-text text-muted">Votre mot de passe doit faire au minimum 6 caratères et contenir au moins 1 chiffre.</small>
                                </div>
                                {# <div class="md-form form-sm mb-4">
                                    <i class="fa fa-lock prefix"></i>
                                    <input type="password" class="form-control"  placeholder="Répétez votre mot de passe">
                                </div> #}

                                <div class="mt-2 text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i> Inscription</button>                     
                                </div>

                                {{ form_end (form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>


{% endblock %}